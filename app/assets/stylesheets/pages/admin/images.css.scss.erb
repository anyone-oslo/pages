#main  .page_images {
  * {
    -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
  }

  .images {
    margin-left: 200px;
  }

  .image {
    float:left;
    cursor:pointer;
    line-height:1px;
    margin-left:10px;
    margin-bottom:10px;

    background-image: linear-gradient(right bottom, rgb(245,245,245) 23%, rgb(240,240,240) 58%);
    background-image: -o-linear-gradient(right bottom, rgb(245,245,245) 23%, rgb(240,240,240) 58%);
    background-image: -moz-linear-gradient(right bottom, rgb(245,245,245) 23%, rgb(240,240,240) 58%);
    background-image: -webkit-linear-gradient(right bottom, rgb(245,245,245) 23%, rgb(240,240,240) 58%);
    background-image: -ms-linear-gradient(right bottom, rgb(245,245,245) 23%, rgb(240,240,240) 58%);
    background-image: -webkit-gradient(
      linear,
      right bottom,
      left top,
      color-stop(0.23, rgb(245,245,245)),
      color-stop(0.58, rgb(240,240,240))
    );
    background-color: #eee;

    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);

    &:hover, &.selected {
      /*-webkit-transition:all .2s ease-in;*/
      outline:solid 3px hsl(198,67%,35%);
      outline-offset: -1px;
    }

    img {
      width: 120px;
      height: 120px;
    }

    &.primary {
      margin-left: 0px;
      img {
        width: 190px;
        height: 190px;
      }
    }
  }

  .editor {
    line-height: 1px;
    margin-bottom: 40px;
    background-image: url('<%= asset_path "pages/admin/image-editor-bg.png" %>');
    box-shadow: 0px 2px 15px hsla(0,0%,0%,0.35);

    h4 {
      margin:0;
      margin-right:10px;
    }

    h4, .controls {
      line-height: 20px;
    }

    .controls {
      padding: 10px 10px 15px 10px;
      background-color: hsl(0,0%,0%);
      color: #fff;
      line-height: 1.6;

      fieldset {
        border: 0px;
        margin: 0px;
        padding: 0px;
        position: relative;
        label, input {
          display: block;
          float: left;
        }
        label {
          width: 100px;
          line-height: 40px;
        }
        input {
          position: absolute;
          width: auto;
          left: 100px;
          right: 0px;
        }
      }

      .caption-fieldset {
        margin-bottom: 15px;
      }

      .embed {
        float: right;
        margin-top: -10px;
        background: #111;
        color: #888;
        border-color: #333;
        width: 150px;
        min-width: 0px;
      }

      .nav {
        float: right;
        a {
          margin-left:5px;
          color:hsl(198,37%,65%);
        }
      }
    }

    .edit-image-container {
      position: relative;
      .previous, .next {
        //text-indent: -9000px;
        //background: yellow;
        position: absolute;
        height: 100%;
        width: 40px;
        opacity: 0.4;
        &:hover {
          opacity: 0.8;
        }
        &:after {
          content: "";
          position: absolute;
          top: 50%;
          //left: 10px;
          margin-top: -10px;
          width: 0;
          height: 0;
          border-top: 20px solid transparent;
          border-bottom: 20px solid transparent;
        }
      }
      .next {
        right: -20px;
      }
      .next:after {
        border-left: 20px solid #888;
        left: 20px;
      }
      .previous {
        left: -20px;
      }
      .previous:after {
        border-right: 20px solid #888;
      }
      .edit-image {
        padding: 25px;
      }
    }
  }
}
