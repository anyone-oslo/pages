body.login {

  #header {
    height: 55px;
  }

  #loginForm {
    padding-top: 10px;
  }
  #loginForm .openid_url {
    background: white url('<%= image_path "pages/admin/login-openid.gif" %>') 10px 11px no-repeat;
    padding-left: 32px;
  }
  .forgot_password_link {
    padding-left: 6px;
  }

  .login_links {
    margin: 0; padding: 0;
    list-style-position: inside;
    list-style-type: disc;
    color: #ccc;
    line-height: 1.5;
  }
  .login_links li {
    margin: 0; padding: 0;
    font-size: 1.2em;
  }

  label {
    display: block;
    font-weight: bold;
    margin-bottom: 8px;
    font-size: 1.2em;
    color: #444;
  }

}

