body.login {
  #header {
    height: 55px;
  }
}

#main .login-form {
  padding-top: 10px;

  input.openid-url {
    background-image: url('<%= image_path "pages/admin/login-openid.gif" %>');
    background-position: 10px 11px;
    background-repeat: no-repeat;
    padding-left: 32px;
  }

  label {
    display: block;
    font-weight: bold;
    margin-bottom: 8px;
    font-size: 1.2em;
    color: #444;
  }

  ul {
    margin: 0px;
    padding: 0px;
    margin-top: 30px;
    list-style-position: inside;
    list-style-type: disc;
    color: #ccc;
    line-height: 1.5;
    li {
      margin: 0px;
      padding: 0px;
      font-size: 1.2em;
    }
  }
}
