textarea.rich {
  margin-top: 0px;
}
.richTextToolbar {
    position:relative;
    list-style:none;
    border:1px solid #d7d7d7;
    border-bottom: none;
    background-color:#F6F6F6;
    margin:0;
    padding:0;
    padding-right: 20px;
    width: 100%;
    height:18px;
    margin-bottom: 0px;
}

.richTextToolbar li {
    list-style:none;
    margin:0;
    padding:0;
    float:left;
}

.richTextToolbar li a {
  cursor: pointer;
    width:24px;
    height:16px;
    float:left;
    display:block;
    background-image:url('<%= asset_path "pages/admin/textarea_controls.gif" %>');
    border:1px solid #fff;
    border-right-color:#d7d7d7;
}

.richTextToolbar li a:hover {
    border-color:#900;
}

.richTextToolbar .ItalicsButton { background-position: 0 -119px; }
.richTextToolbar .BoldButton { background-position: 0 -102px; }
.richTextToolbar .LinkButton { background-position: 0 0; }
.richTextToolbar .ImageButton { background-position: 0 -170px; }
.richTextToolbar .UnorderedListButton { background-position: 0 -34px; }
.richTextToolbar .OrderedListButton { background-position: 0 -51px; }
.richTextToolbar .QuoteButton { background-position: 0 -68px; }
.richTextToolbar .CodeButton { background-position: 0 -136px; }
.richTextToolbar .HelpButton { background-position: 0 -153px; }
.richTextToolbar .HeadingButton { background-position: 0 -85px; }
.richTextToolbar .EscapeButton { background-position: 0 -306px; }
.richTextToolbar .Heading2Button { background-position: 0 -238px; }
.richTextToolbar .Heading3Button { background-position: 0 -255px; }
.richTextToolbar .Heading4Button { background-position: 0 -272px; }
.richTextToolbar .EmailButton { background-position: 0 -323px; }
