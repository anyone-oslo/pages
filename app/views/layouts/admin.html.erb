<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>
      <%= [@page_title, "Pages"].reject(&:blank?).uniq.join(" - ") %>
    </title>

    <link rel="shortcut icon"
          href="<%= asset_path 'pages/favicon.gif' %>"
          type="image/gif" />
    <link rel="icon"
          href="<%= asset_path 'pages/favicon.gif' %>"
          type="image/gif" />

    <%= stylesheet_link_tag "pages/admin" %>

    <% if Dir.glob(Rails.root.join("app/assets/stylesheets/admin.*")).any? %>
      <%= stylesheet_link_tag "admin" %>
    <% end %>

    <%= javascript_include_tag "pages_core/admin", defer: true %>
    <% if Dir.glob(Rails.root.join("app/assets/javascripts/admin.*")).any? %>
      <%= javascript_include_tag "admin" %>
    <% end %>

    <%= csrf_meta_tag %>
    <meta name="viewport"
          content="width=device-width, initial-scale=1, user-scalable=no">
  </head>

  <body class="<%= body_classes.join(" ") %>"
        data-controller="<%= controller.class.to_s %>"
        data-action="<%= controller.action_name %>"
        data-locale="<%= @locale %>">

    <div class="wrapper">
      <%= render partial: "layouts/admin/header" %>
      <% if content_for?(:main_wrapper) %>
        <%= yield :main_wrapper %>
      <% else %>
        <div class="main-wrapper">
          <main data-controller="main">
            <%= render(partial: "layouts/admin/page_header") %>
            <%= yield %>
          </main>

          <% if content_for?(:sidebar) %>
            <aside class="sidebar">
              <%= content_for(:sidebar) %>
            </aside>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= react_component "Modal", {} %>
    <%= react_component "Toast", { notice: flash[:notice], error: flash[:error] } %>
    <%= render partial: "layouts/admin/analytics" %>
  </body>
</html>
