  <div class="page_images">
    <div class="editor">
      <div class="controls">
        <div class="nav">
          <%= link_to "Previous", '#', :class => :previous %>
          <%= link_to "Next",     '#', :class => :next %>
          <%= link_to "Close",    '#', :class => :close %>
        </div>
        <h4>Image Editor</h4>
        <%= text_field_tag 'page_image[byline]', '', :class => 'caption', :placeholder => 'Write your caption/byline' %>
        <%= check_box_tag 'page_image[primary]', '1', false %><label>Primary</label>
        <%= hidden_field_tag 'page_image[crop_start]' %>
        <%= hidden_field_tag 'page_image[crop_size]' %>
        <button class="save">Save</button>
        <%= link_to "Delete image", '#', :class => :delete %>
      </div>
      <div class="edit_image"></div>
    </div>

    <div class="uploadButton">
      <p>
        <button type="button" class="upload-images-button">
          Upload images
        </button>
      </p>
    </div>

    <div class="no_images">
      <p>No images have been uploaded.</p>
    </div>

    <div class="primary_container">
      <% if @page.image? && (page_image = @page.page_images.select{|pi| pi.primary?}.first) %>
        <a class="image primary" data-page-image-id="<%= page_image.id %>" href="<%= dynamic_image_url page_image.image, size: '2000x2000' %>">
          <%= dynamic_image_tag(page_image.image, :size => '380x380', :crop => true, :upscale => true) %>
        </a>
      <% end %>
    </div>
    <div class="images clearfix">
      <% @page.page_images.reject{|pi| pi.primary?}.each do |i| %>
        <a class="image" data-page-image-id="<%= i.id %>" href="<%= dynamic_image_url i.image, size: '2000x2000' %>">
          <%= dynamic_image_tag(i.image, :size => '240x240', :crop => true, :upscale => true) %>
        </a>
      <% end %>
    </div>

  </div>
