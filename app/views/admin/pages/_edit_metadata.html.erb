<div class="field">
  <% if f.object.pathable? %>
    <%= labelled_field(f.text_field(:path_segment),
                       "Path segment",
                       description: "Only alpanumeric characters and dashes " \
                         "are allowed.") %>
  <% else %>
    <div class="field">
      <label>Path segment</label>
      <p class="description">
        Unable to add a path segment,
        please add one to
        <%= link_to("this page's parent",
                    edit_admin_page_path(f.object.parent,
                                         locale: f.object.locale,
                                         anchor: "metadata")) %>
        first.
      </p>
    </div>
  <% end %>
</div>

<div class="field">
  <%= f.label_for :meta_image, "Image" %>
  <p class="description">
    Image displayed when sharing on social media.
    Will fall back to the primary image if absent.
    Recommended size is at least 1200x630.
  </p>
  <% if @page.meta_image %>
    <p>
      <%= dynamic_image_tag @page.meta_image, size: "250x" %>
      <br>
      <%= link_to("Delete image",
                  delete_meta_image_admin_page_path(@locale, @page),
                  method: "delete",
                  class: "delete",
                  data: { confirm: "Are you sure?" }) %>
    </p>
  <% end %>
  <%= f.file_field :meta_image %>
</div>

<%= labelled_field(f.text_field(:meta_title),
                   @page.class.human_attribute_name(:meta_title),
                   description: t("page.descriptions.meta_title")) %>

<%= labelled_field(f.text_area(:meta_description),
                   @page.class.human_attribute_name(:meta_description),
                   description: t("page.descriptions.meta_description")) %>

<%= labelled_field(f.text_field(:open_graph_title),
                   @page.class.human_attribute_name(:open_graph_title),
                   description: t("page.descriptions.open_graph_title")) %>

<%= labelled_field(f.text_area(:open_graph_description),
                   @page.class.human_attribute_name(:open_graph_description),
                   description: t("page.descriptions.open_graph_description")) %>
